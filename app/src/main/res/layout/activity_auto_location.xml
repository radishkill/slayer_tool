<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/auto_location_drawer_layout"
    tools:context=".activity.AutoLocationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/auto_location_top_view_bar"
            android:id="@+id/auto_location_top_view_bar"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="start"
        android:background="#FFFF00"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="左侧滑菜单_test"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="end"
        android:background="#FF00FF"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv_location_information"/>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>